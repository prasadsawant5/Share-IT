<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_email"
        android:hint="Email Address"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_alignRight="@+id/btn_register"
        android:layout_alignEnd="@+id/btn_register" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_phone"
        android:hint="Contact Number"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/btn_register"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="REGISTER"
        android:id="@+id/btn_register"
        android:padding="0dp"
        android:background="@drawable/button_selector"
        android:textColor="@drawable/button_color_selector"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/iv_avatar"
        android:layout_alignStart="@+id/iv_avatar"
        android:layout_alignRight="@+id/et_phone"
        android:layout_alignEnd="@+id/et_phone" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/iv_avatar"
        android:src="@drawable/avatar"
        android:layout_alignBottom="@+id/et_phone"
        android:layout_toLeftOf="@+id/et_phone"
        android:layout_toStartOf="@+id/et_phone" />

</RelativeLayout>