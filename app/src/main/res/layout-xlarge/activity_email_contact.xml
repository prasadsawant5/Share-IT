<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_email"
        android:hint="Email Address"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_marginRight="82dp" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_phone"
        android:hint="Contact Number"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/btn_register"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_alignRight="@+id/et_email"
        android:layout_alignEnd="@+id/et_email" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="REGISTER"
        android:id="@+id/btn_register"
        android:padding="0dp"
        android:background="@drawable/button_selector"
        android:textColor="@drawable/button_color_selector"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/iv_avatar"
        android:layout_alignStart="@+id/iv_avatar"
        android:layout_alignRight="@+id/et_phone"
        android:layout_alignEnd="@+id/et_phone" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:id="@+id/iv_avatar"
        android:src="@drawable/avatar"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="77dp"
        android:layout_alignBottom="@+id/et_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>